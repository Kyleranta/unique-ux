---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Unique UX">
    <header class="main background100">
        <section class="hero-container">
            <h1 class="subtitle">Contact Unique UX</h1>
        </section>
    </header>

    <form class="form" name="contact" action="/success" method="POST">
        <label class="margin-bottom-16"
            >Name
            <input type="text" name="name" /></label
        >
        <label class="margin-bottom-16"
            >Email*
            <input type="text" name="email" /></label
        >
        <label class="grid"
            >Are you new to Unique UX?
            <select class="margin-bottom-16" name="role[]">
                <option value="new-customer">Yes, I'm new</option>
                <option value="exsisting-customer">No, I'm following up.</option
                >
                <option value="other">I'm neither</option>
            </select></label
        >
        <p>
            <label class="margin-bottom-8"
                >Message: <textarea name="message"></textarea></label
            >
        </p>
        <!-- <div data-netlify-recaptcha="true"></div> -->
        <p>
            <button class="button-text margin-bottom-16" type="submit"
                >Send</button
            >
        </p>
    </form>
</Layout>

<style>
    .form {
        max-width: 600px;
        width: 100%;
        display: grid;
        margin-inline: 8px;
        grid-column: 1 / 5;
        grid-row: 1 / 2;
        align-self: center;
        gap: 4px;
        padding: 12px;
        background-color: var(--medium);
    }

    label {
        font-size: 16px;
        display: flex;
        flex-wrap: wrap;
        width: auto;
        height: min-content;
        color: white;
        font-weight: normal;
    }

    input {
        width: 100%;
        height: 100%;
        font-size: 16px;
        min-width: none;
        color: white;
        padding: 8px;
        background-color: var(--light);
    }

    select {
        color: white;
        background-color: var(--light);
        padding: 8px;
    }

    textarea {
        color: white;
        background-color: var(--light);
        padding: 8px;
        width: 100%;
    }

    .button-text {
        width: 100%;
        background-color: var(--btn);
        border: none;
        padding: 8px;
        margin-top: 8px;
        color: white;
        border-radius: 4px;
    }
</style>
